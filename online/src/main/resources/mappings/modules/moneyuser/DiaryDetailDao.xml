<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renjie120.modules.moneyuser.dao.DiaryDetailDao">
    
	<sql id="diaryDetailColumns">
		a.id AS "id",
		a.content AS "content",
		a.time AS "time",
		a.type AS "type"
	</sql>
	
	<sql id="diaryDetailJoins">
	</sql>
    
	<select id="get" resultType="DiaryDetail">
		SELECT 
			<include refid="diaryDetailColumns"/>
		FROM diary_detail a
		<include refid="diaryDetailJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="DiaryDetail">
		SELECT 
			<include refid="diaryDetailColumns"/>
		FROM diary_detail a
		<include refid="diaryDetailJoins"/>
		<where>
			
			<if test="id != null and id != ''">
				AND a.id LIKE 
					<if test="dbName == 'oracle'">'%'||#{id}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{id}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{id},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.id}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="DiaryDetail">
		SELECT 
			<include refid="diaryDetailColumns"/>
		FROM diary_detail a
		<include refid="diaryDetailJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.id != null and page.id != ''">
				ORDER BY ${page.id}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO diary_detail(
			content,
			time,
			type
		) VALUES (
			#{content},
			#{time},
			#{type}
		
		)
	</insert>
	
	<update id="update">
		UPDATE diary_detail SET 	
			content = #{content},
			time = #{time},
			type = #{type}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM diary_detail
		WHERE id = #{id}
	</update>
	
</mapper>